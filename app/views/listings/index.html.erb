<div class="jumbotron">
  <h2>Shop directly from people</h2>
  <h2>around the world.</h2>
</div>


<div class="center">
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= link_to image_tag(listing.image.url), listing %>
          <div class="caption">
            <p><%= listing.name %> &nbsp <span class="money"><%= number_to_currency(listing.price) %> USD</span></p>
            <p><%= "Sold by #{listing.user.name}" %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path, class:"btn btn-link", data: { no_turbolink: true } %>
<% end %>
